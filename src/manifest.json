{
    "manifest_version": 2,

    "name": "Coursera Materials Downloader",
    "description": "This extension downloads coursera course's Materials (e.g. video, slide)",
    "version": "1.0",
    "icons": { "16" : "images/icon_24.png",
               "48" : "images/icon_48.png",
               "128": "images/icon_128.png"
    },
    "background": {
        "scripts": ["lib/background.js"]
    },
    "page_action": {
        "default_icon": {
            "19": "images/icon_24.png",
            "38": "images/icon_48.png"
        },
        "default_title": "Download Coursera's Materials"
    },
    "permissions": [
        "tabs",
        "downloads",
        "notifications",
        "http://*/*",
        "https://*/*"
    ]
}
